<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tt.richTaxist" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_taxi"
        android:label="@string/appName"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".FirstScreenActivity"
            android:label="@string/appName" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/mainScreenName" >
        </activity>
        <activity
            android:name=".ShiftTotalsActivity"
            android:label="@string/shiftTotals"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".GrandTotalsActivity"
            android:label="@string/grandTotalsScreenName"
            android:parentActivityName=".FirstScreenActivity">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings" >
        </activity>
        <activity
            android:name=".Settings4ParksAndBillingsActivity"
            android:label="@string/settings" >
        </activity>
        <activity
            android:name=".gps.google.MapMyLocationChangeActivity"
            android:label="@string/appName" >
        </activity>
        <activity
            android:name=".OrderActivity"
            android:label="@string/mainScreenName" >
        </activity>
        <activity
            android:name=".gps.RouteActivity"
            android:label="@string/routeMap" >
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/signInScreenName" >
        </activity>


        <service
            android:name=".gps.GPSService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
    </application>
</manifest>
