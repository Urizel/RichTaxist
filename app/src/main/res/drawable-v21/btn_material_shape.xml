<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/button_margins"
    android:insetTop="@dimen/button_margins"
    android:insetRight="@dimen/button_margins"
    android:insetBottom="@dimen/button_margins">
    <layer-list>
        <!--последовательность слоев в layer-list: первый item в списке - самый дальний-->
        <!--таким образом тень нужно добавлять еще выше-->
        <item android:drawable="@drawable/btn_selector" />
        <item>
            <!--item shape необходим исключительно для обозначения границ ripple-эффекта-->
            <shape android:shape="rectangle"/>
        </item>
    </layer-list>
</inset>