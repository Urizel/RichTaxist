<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="tt.richTaxist.FirstScreenActivity"
    android:rowOrderPreserved="false"
    android:useDefaultMargins="false">

    <Button
        android:text="@string/openLastShift" style="@style/ButtonBordered"
        android:id="@+id/buttonOpenLastShift"
        android:layout_width="380dp" android:layout_height="80dp"
        android:layout_row="0" android:layout_column="0" android:layout_columnSpan="2"
        android:layout_marginTop="4dp" />


    <Button
        android:text="@string/newShift" style="@style/ButtonBordered"
        android:id="@+id/buttonNewShift"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="1" android:layout_column="0"/>
    <Button
        android:text="@string/openShift" style="@style/ButtonBordered"
        android:id="@+id/buttonOpenShift"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="1" android:layout_column="1"/>


    <Button
        android:text="@string/settingsAndExtras" style="@style/ButtonBordered"
        android:id="@+id/buttonSettings"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="2" android:layout_column="0"/>

    <Button
        android:text="@string/signIn" style="@style/ButtonBordered"
        android:id="@+id/buttonSignIn"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="2" android:layout_column="1"/>


    <Button
        android:text="@string/chat" style="@style/ButtonBordered"
        android:id="@+id/buttonChat"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="3" android:layout_column="0" />
    <Button
        android:text="@string/routeMap" style="@style/ButtonBordered"
        android:id="@+id/buttonRoute"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="3" android:layout_column="1" />


    <Button
        android:text="@string/grandTotalsScreenName" style="@style/ButtonBordered"
        android:id="@+id/buttonGrandTotals"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="4" android:layout_column="0"/>
    <Button
        android:text="@string/exit" style="@style/ButtonBordered"
        android:id="@+id/buttonExit"
        android:layout_width="188dp" android:layout_height="80dp"
        android:layout_row="4" android:layout_column="1"/>
</GridLayout>
