<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/entryIcon"
        android:layout_width="40dp" android:layout_height="40dp"
        android:layout_row="0" android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:text="@string/entryTextExampleMain"
        android:id="@+id/entryTextViewMain"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="0" android:layout_column="1"
        android:layout_gravity="start"
        android:textStyle="bold"
        />

    <TextView
        android:text="@string/entryTextExampleAdditional"
        android:id="@+id/entryTextViewAdditional"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="1" android:layout_column="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="start" />
</GridLayout>