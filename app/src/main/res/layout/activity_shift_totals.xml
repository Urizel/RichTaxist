<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="384dp" android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ShiftTotalsActivity">

    <GridLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="@string/shiftStart"
            style="@style/Text"
            android:layout_width="180dp" android:layout_height="wrap_content"
            android:layout_row="0" android:layout_column="0"/>
        <TextView android:text="@string/shiftEnd"
            style="@style/Text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_row="0" android:layout_column="1"
            android:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_row="1" android:layout_column="0" android:layout_columnSpan="2"
            android:orientation="horizontal">

            <Button android:text="@string/date"
                style="@style/ButtonBordered"
                android:id="@+id/buttonShiftStartDate"
                android:layout_width="92dp" android:layout_height="60dp" />
            <Button android:text="@string/time"
                style="@style/ButtonBordered"
                android:id="@+id/buttonShiftStartTime"
                android:layout_width="92dp" android:layout_height="60dp" />
            <Button android:text="@string/date"
                style="@style/ButtonBordered"
                android:id="@+id/buttonShiftEndDate"
                android:layout_width="92dp" android:layout_height="60dp"/>
            <Button android:text="@string/time"
                style="@style/ButtonBordered"
                android:id="@+id/buttonShiftEndTime"
                android:layout_width="92dp" android:layout_height="60dp"/>
        </LinearLayout>
    </GridLayout>


    <ScrollView
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <GridLayout
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="@string/revenueOfficial"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="2" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_revenueOfficial"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="2" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"/>


            <TextView android:text="@string/revenueCash"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="3" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_revenueCash"
                style="@style/Text"
                android:layout_row="3" android:layout_column="1"
                android:layout_width="188dp" android:layout_height="40dp"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"/>


            <TextView android:text="@string/revenueCard"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="4" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_revenueCard"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="4" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"/>


            <TextView android:text="@string/petrol"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="5" android:layout_column="0"
                android:gravity="center_vertical" />
            <Button android:id="@+id/st_petrol"
                style="@style/ButtonBordered"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="5" android:layout_column="1"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:onClick="onPetrolClick" />


            <TextView android:text="@string/toTheCashier"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="6" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_toTheCashier"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="6" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"/>


            <TextView android:text="@string/salaryOfficial"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="7" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_salaryOfficial"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="7" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"/>


            <TextView android:text="@string/revenueBonus"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="8" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_revenueBonus"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="8" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"/>


            <TextView android:text="@string/salaryPlusBonus"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="9" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_salaryPlusBonus"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="9" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"/>

            <TextView android:text="@string/workHoursSpent"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="10" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_workHoursSpent"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="10" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"
                android:hint="0" />


            <TextView android:text="@string/salaryPerHour"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="11" android:layout_column="0"
                android:gravity="center_vertical" />
            <EditText android:id="@+id/st_salaryPerHour"
                style="@style/Text"
                android:layout_width="188dp" android:layout_height="40dp"
                android:layout_row="11" android:layout_column="1"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:enabled="false"
                android:hint="0" />
        </GridLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="20dp">
        <Button android:text="@string/exitToMainMenu"
            style="@style/ButtonBordered"
            android:id="@+id/buttonExitToMainMenu"
            android:layout_width="124dp" android:layout_height="60dp"
            android:onClick="onButtonExitToMainMenuClick" />
        <ToggleButton android:id="@+id/buttonShiftIsClosed"
            style="@style/ToggleButtonBordered"
            android:textOff="@string/shiftIsOpen"
            android:textOn="@string/shiftIsClosed"
            android:layout_width="124dp" android:layout_height="60dp"
            android:drawableRight="@drawable/ic_lock_selector"
            android:onClick="onButtonShiftIsClosedClick"/>
        <Button android:text="@string/continueShift"
            style="@style/ButtonBordered"
            android:id="@+id/buttonContinueShift"
            android:layout_width="124dp" android:layout_height="60dp"
            android:onClick="onContinueShiftClick" />
    </LinearLayout>
</LinearLayout>