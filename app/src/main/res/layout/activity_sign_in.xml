<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="384dp" android:layout_height="wrap_content"
    tools:context=".SignInActivity"
    android:id="@+id/gla">

    <TextView
        android:text="@string/userName" style="@style/Text"
        android:id="@+id/textUserName"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="0" android:layout_column="0"
        android:layout_gravity="center_vertical|right" />
    <EditText
        android:id="@+id/editUserName" style="@style/Text"
        android:inputType="text"
        android:layout_width="252dp" android:layout_height="wrap_content"
        android:layout_row="0" android:layout_column="1" android:layout_columnSpan="2" />


    <TextView
        android:text="@string/password" style="@style/Text"
        android:id="@+id/textPassword"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="1" android:layout_column="0"
        android:layout_gravity="center_vertical|right" />
    <EditText
        android:id="@+id/editPassword" style="@style/Text"
        android:inputType="textPassword"
        android:layout_width="252dp" android:layout_height="wrap_content"
        android:layout_row="1" android:layout_column="1" android:layout_columnSpan="2" />


    <TextView
        android:text="@string/email" style="@style/Text"
        android:id="@+id/textEmail"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="2" android:layout_column="0"
        android:layout_gravity="center_vertical|right" />
    <EditText
        android:id="@+id/editEmail" style="@style/Text"
        android:inputType="textEmailAddress"
        android:layout_width="252dp" android:layout_height="wrap_content"
        android:layout_row="2" android:layout_column="1" android:layout_columnSpan="2" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_row="3" android:layout_column="0" android:layout_columnSpan="3"
        android:layout_marginBottom="20dp">

        <Button
            android:text="@string/signUp" style="@style/ButtonBordered"
            android:id="@+id/buttonSignUp"
            android:layout_width="188dp" android:layout_height="80dp"
            android:onClick="onSignUpClick" />

        <Button
            android:id="@+id/buttonLogIn" style="@style/ButtonBordered"
            android:layout_width="188dp" android:layout_height="80dp"
            android:text="@string/logIn"
            android:onClick="onLoginClick" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonClaimChangeDevice" style="@style/ButtonBordered"
        android:layout_width="124dp" android:layout_height="80dp"
        android:layout_row="4" android:layout_column="0"
        android:text="@string/claimChangeDevice"
        android:onClick="onClaimChangeDeviceClick"
        android:layout_gravity="top" />
    <Button
        android:id="@+id/buttonContribute" style="@style/ButtonBordered"
        android:layout_width="124dp" android:layout_height="80dp"
        android:layout_row="4" android:layout_column="1"
        android:text="@string/contribute"
        android:onClick="onContributeClick"
        android:layout_gravity="top" />
    <Button
        android:id="@+id/buttonLogOut" style="@style/ButtonBordered"
        android:layout_width="124dp" android:layout_height="80dp"
        android:layout_row="4" android:layout_column="2"
        android:text="@string/logOut"
        android:onClick="onLogoutClick"
        android:layout_gravity="top" />
    <ProgressBar
        style="@android:style/Widget.Holo.ProgressBar"
        android:id="@+id/view_progress"
        android:layout_width="match_parent" android:layout_height="80dp"
        android:layout_row="4" android:layout_column="0" android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:text="@string/signUpDefault" style="@style/Text"
        android:id="@+id/textViewUser_Secret"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_row="5" android:layout_column="0" android:layout_columnSpan="3"
        android:layout_gravity="top" />




</GridLayout>