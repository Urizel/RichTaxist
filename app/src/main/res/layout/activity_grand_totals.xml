<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    tools:context=".GrandTotalsActivity"
    android:orientation="vertical"
    android:id="@+id/activity_grand_totals"
    android:layout_gravity="center">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="tt.richTaxist.Bricks.DateTimeRangeFrag"
        tools:layout="@layout/fragment_date_time_range"
        android:id="@+id/dateTimeRangeFragment"/>

    <ScrollView
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TableLayout
            android:layout_width="match_parent" android:layout_height="0dp">
            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/revenueOfficial"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_revenueOfficial"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/revenueCash"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_revenueCash"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/revenueCard"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_revenueCard"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/petrol"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_petrol"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/handedToTheCashier"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_toTheCashier"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/salaryOfficial"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_salaryOfficial"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/revenueBonus"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_revenueBonus"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/salaryUnofficial"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/gt_salaryPlusBonus"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="end"
                    android:enabled="false"
                    android:hint="@string/zero"
                    android:layout_gravity="center_vertical"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                    android:text="@string/taxopark"
                    style="@style/Text"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
                <Spinner
                    android:id="@+id/spnTaxopark"
                    android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>
